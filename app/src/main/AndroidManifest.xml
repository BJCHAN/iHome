<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tianchuang.ihome_b">

    <!-- 网络相关 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- 读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.PERMISSION_NAME" />

    <application
        android:name=".TianChuangApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/ToolBarTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 设置模块 -->
        <activity
            android:name=".activity.SettingActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 修改密码模块 -->
        <activity
            android:name=".activity.ModifyPasswordActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 关于物管宝 -->
        <activity
            android:name=".activity.AboutMessageActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 扫一扫 -->
        <activity
            android:name=".activity.ScanCodeActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 抢单大厅 -->
        <activity
            android:name=".activity.RobHallActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 故障详情页面 -->
        <activity
            android:name=".activity.FaultDetailActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- 内部报事页面 -->
        <activity
            android:name=".activity.InnerReportsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <!-- 菜单内部报事 -->
        <activity
            android:name=".activity.MenuInnerReportsActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DataSearchActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <!-- 投诉建议 -->
        <activity
            android:name=".activity.ComplainSuggestActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <!-- 访客列表 -->
        <activity
            android:name=".activity.VisitorListActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <!-- 我的订单 -->
        <activity
            android:name=".activity.MyOrderActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <!--我的任务-->
        <activity
            android:name=".activity.MyTaskActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <!--表单申报-->
        <activity
            android:name=".activity.DeclareFormActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!--表单提交-->
        <activity
            android:name=".activity.FormSubmitActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <!--表单提交-->
        <activity
            android:name=".activity.VisitorListActivity2"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
    </application>

</manifest>