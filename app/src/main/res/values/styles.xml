<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--<item name="colorPrimary">@color/colorPrimary</item>-->
    <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
    <!--<item name="colorAccent">@color/colorAccent</item>-->
    <!--</style>-->
    <style name="ToolBarTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/app_primary_color</item>
        <item name="colorPrimaryDark">@color/app_primary_color</item>
        <item name="android:windowBackground">@color/app_color_background</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColor">@color/TC_1</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--checkBox未选中的颜色-->
        <item name="colorControlNormal">@color/TC_2</item>
        <!--cheackBox选中的颜色-->
        <item name="colorControlActivated">@color/app_primary_color</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/app_primary_color</item>
        <item name="backgroundSplit">@color/app_color_background</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/app_color_background</item>
        <item name="android:textColor">@color/app_primary_color_dark</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <!--指示横线的颜色-->
        <item name="tabIndicatorColor">@color/app_primary_color</item>
        <!--指示横线的高度-->
        <item name="tabIndicatorHeight">2dp</item>
        <!--选中的文字颜色-->
        <item name="tabSelectedTextColor">@color/app_primary_color</item>
        <!--tab字体样式-->
        <item name="tabTextAppearance">@style/TabTextStyle</item>
        <!--指示器的背景颜色-->
        <item name="tabBackground">@color/white</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/app_primary_color</item>
        <item name="colorControlActivated">@color/black</item>
    </style>
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <!--文字大小-->
        <item name="android:textSize">13sp</item>
        <!--未选中的文字颜色-->
        <item name="android:textColor">@color/TC_2</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--&lt;!&ndash;星星的样式&ndash;&gt;-->
    <!--<style name="foodRatingBar" parent="@android:style/Widget.RatingBar">-->
        <!--<item name="android:progressDrawable">@drawable/ratingstars</item>-->
        <!--<item name="android:minHeight">13dip</item>-->
        <!--<item name="android:maxHeight">30dip</item>-->
    <!--</style>-->
    <style name="RatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlActivated">@color/TC_3</item>
    </style>
    <style name="RatingBarTheme" parent="ToolBarTheme">
        <item name="colorControlNormal">@color/TC_2</item>
        <item name="colorControlActivated">@color/TC_3</item>
    </style>
    <!--15dp黑-->
    <style name="normal_content_text">

        <item name="android:textColor">@color/TC_1</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>

    <!--13dp黑-->
    <style name="small_content_text">

        <item name="android:textColor">@color/TC_1</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>
    <!--13dp灰-->
    <style name="small_content_gray_text">
        <item name="android:textColor">@color/TC_2</item>
        <item name="android:textSize">@dimen/text_small_size</item>
    </style>
    <!--15dp灰-->
    <style name="normal_content_gray_text">
        <item name="android:textColor">@color/TC_2</item>
        <item name="android:textSize">@dimen/text_normal_size</item>
    </style>
    <!--卡片布局的样式-->
    <style name="common_normal_cardview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <!--通用的确认样式-->
    <style name="common_sure_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/login_login_button_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
