<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="15dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="30dp">

    <ImageView
        android:id="@+id/iv_cell_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/cell_icon" />

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_cell_icon"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_address"
            style="@style/normal_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和睦小区" />

        <TextView
            android:id="@+id/tv_postion"
            style="@style/small_content_gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工程部  机电工程师" />

        <TextView
            style="@style/normal_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="物业经理联系方式" />
        <TextView
            android:id="@+id/tv_name"
            style="@style/small_content_gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名：" />
        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/tv_phone"
            style="@style/small_content_gray_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机：18767466573 (非工作时间)" />

    </LinearLayout>

    <View
        android:layout_below="@id/ll_info"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_gray" />
</RelativeLayout>
