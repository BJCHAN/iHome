<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"
>
    <!--横向的-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:descendantFocusability="afterDescendants"
    >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:src="@drawable/cell_icon"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="和睦小区"
                android:textColor="@color/TC_1"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_department_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_company_name"
                android:text="和睦小区"
                android:textColor="@color/TC_2"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_position_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_company_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_department_name"
                android:text="和睦小区"
                android:textColor="@color/TC_2"
                android:textSize="12sp"/>

        </RelativeLayout>
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_little_red"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background_gray"
        />
        <FrameLayout android:layout_width="55dp"
                     android:id="@+id/fl_often_btn"
                     android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_often"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/property_often_text"
            />
            <ImageView
                android:id="@+id/iv_often"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/favorite_icon"
                android:visibility="invisible"/>
        </FrameLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>