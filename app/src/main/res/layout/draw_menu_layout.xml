<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="225dp"
             android:layout_height="match_parent"
             android:layout_gravity="start"
             android:clickable="true"
             android:tag="left">

    <ImageView
        android:id="@+id/iv_drawer_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_primary_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/id_draw_menu_header"
            android:layout_width="match_parent"
            android:layout_height="154dp">

            <TextView
                android:id="@+id/id_draw_menu_item_backup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="88dp"
                android:gravity="center"
                android:text="abyss"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/id_draw_menu_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_draw_menu_item_backup"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="9dp"
                android:text="13588432197"
                android:drawablePadding="6dp"
                android:drawableLeft="@mipmap/menu_phone"
                android:textColor="@android:color/white"
                android:textSize="15sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/id_draw_menu_item_list_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:divider="@android:color/transparent"
                android:overScrollMode="never"
                android:scrollbars="none"/>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
