<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp">

        <ImageView
            android:id="@+id/iv_little_point"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/little_red" />

        <TextView
            android:id="@+id/tv_point_name"
            style="@style/normal_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_little_point"
            android:text="控制点一" />
        <TextView
            android:id="@+id/tv_point_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:drawablePadding="5dp"
            android:layout_toRightOf="@id/tv_point_name"
            android:gravity="right"
            android:drawableRight="@mipmap/menu_arrow"
            android:text="08:12完成"
            android:textColor="@color/app_primary_color"
            android:textSize="15sp" />
    </RelativeLayout>
    <View
        android:id="@+id/v_line"
        android:layout_marginLeft="15dp"
        android:background="@color/background_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>

